<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="170dp"
    android:layout_height="140dp"
    android:layout_marginStart="15dp"
    android:layout_marginTop="10dp"
    android:backgroundTint="@color/purpur"
    app:cardCornerRadius="50dp"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvSunnyItem"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/amethysta"
            android:gravity="center"
            android:shadowColor="@null"
            android:textColor="@color/Darkblue"
            android:textColorHighlight="@null"
            android:textColorHint="@null"
            android:textColorLink="@null"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@+id/tvDataItem"
            app:layout_constraintStart_toEndOf="@+id/tvIm"
            app:layout_constraintTop_toBottomOf="@+id/tvVeterItem"
            tools:text="Небольшой дождь и осадки"/>

        <TextView
            android:id="@+id/tvVeterItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/amethysta"
            android:shadowColor="@null"
            android:textColor="@color/Darkblue"
            android:textColorHighlight="@null"
            android:textColorHint="@null"
            android:textColorLink="@null"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/tvTempItem"
            app:layout_constraintStart_toEndOf="@+id/tvTempItem"
            app:layout_constraintTop_toTopOf="@+id/tvTempItem"
            tools:text="3 m/c"/>

        <TextView
            android:id="@+id/tvDataItem"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/amethysta"
            android:gravity="center"
            android:shadowColor="@null"
            android:textColor="@color/Darkblue"
            android:textColorHighlight="@null"
            android:textColorHint="@null"
            android:textColorLink="@null"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvIm"
            tools:text="02/11/2022"/>

        <TextView
            android:id="@+id/tvTempItem"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/amethysta"
            android:gravity="center"
            android:shadowColor="@null"
            android:textColor="@color/Darkblue"
            android:textColorHighlight="@null"
            android:textColorHint="@null"
            android:textColorLink="@null"
            android:textSize="25sp"
            app:layout_constraintBottom_toTopOf="@+id/tvIm"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="20 C"/>

        <ImageView
            android:id="@+id/tvIm"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@android:drawable/btn_star_big_on" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>